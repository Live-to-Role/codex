# Django settings
# REQUIRED: Generate with: python -c "import secrets; print(secrets.token_urlsafe(50))"
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (local development)
# REQUIRED: These must be set explicitly (no defaults)
DB_NAME=codex
DB_USER=postgres
DB_PASSWORD=your-secure-password-here
DB_HOST=localhost
DB_PORT=5432

# Database (Railway - set automatically)
DATABASE_URL=

# Email (Resend)
RESEND_API_KEY=re_xxxxxxxxxxxx
DEFAULT_FROM_EMAIL=noreply@codex.livetorole.com

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Logging
DJANGO_LOG_LEVEL=INFO
APP_LOG_LEVEL=DEBUG
